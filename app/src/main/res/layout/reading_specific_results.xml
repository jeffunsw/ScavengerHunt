<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/kirang"
            android:gravity="center"
            android:text="@string/reading_intro_screen_title"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/readingResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Correct!"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/readingQuestion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Jack wore red shoes to school. Mary wore purple shoes. What colour shoes did Jack wear?"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="40dp"

            />

        <TextView
            android:id="@+id/readingAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Red"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="100dp"
            />


        <Button
            android:id="@+id/readingNext"
            style="@style/AnswerButtonYellow"
            android:text="Next!"

            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>